# Backend Configuration
# Copy this file to .env and update values as needed

BACKEND_HOST=0.0.0.0
BACKEND_PORT=8030
BACKEND_RELOAD=true

# API Configuration (for frontend)
API_BASE_URL=http://127.0.0.1:8030
# For production: https://your-api-domain.com

# Model Configuration
MODEL_PATH=../model/saved_models
MODEL_FILE=best_model.pth
CLASS_INDICES_FILE=class_indices.json

# Logging
LOG_DIR=../logs
ENABLE_LOGGING=true

# CORS Configuration (for production, specify allowed origins)
# Example: CORS_ORIGINS=https://your-frontend.com,https://www.your-frontend.com
CORS_ORIGINS=*

# Environment
ENV=development
# Options: development, production, staging

# Docker Configuration (if using Docker)
DOCKER_IMAGE_NAME=crop-disease-backend
DOCKER_CONTAINER_NAME=crop_disease_backend